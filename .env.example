#========================================================
# .env for ERPNext-Woocommerce Integration
#========================================================

# ERPNext Configuration
ERP_URL=
ERP_API_KEY=
ERP_API_SECRET=
ERP_COMPANY=

# WooCommerce Configuration
WC_BASE_URL=
WC_API_KEY=
WC_API_SECRET=
WC_BASIC_USER=
WC_BASIC_PASS=

# WordPress Configuration
WP_API_URL=
WP_USERNAME=
WP_APP_PASSWORD=

# Admin UI Configuration
BACKEND_ORIGIN=
ADMIN_USER=
ADMIN_PASS=
CORS_ORIGINS=

# Middleware Webhook Configuration
WC_WEBHOOK_SECRET=
WOO_WEBHOOK_DEBUG=0

# WooCommerce Mode of Payment Mapping
WOO_MODE_OF_PAYMENT_MAP={"cod":"Cash","payfast":"Bank","stripe":"Stripe"}
DATABASE_URL=sqlite+aiosqlite:///./data/middleware.db
JOB_MAX_ATTEMPTS=5
JOB_BASE_BACKOFF_SECONDS=2.0

# Path to shipping parameters file (defaults as below)
SHIPPING_PARAMS_PATH=app/mapping/shipping_params.json

# Path to product mapping store (defaults as below)
MAPPING_STORE_PATH=app/mapping/mapping_store.json
ERP_DEFAULT_CUSTOMER_GROUP=All Customer Groups
ERP_DEFAULT_TERRITORY=All Territories
ERP_DEFAULT_CUSTOMER_TYPE=Individual
ERP_WOO_CUSTOMER_ID_FIELD=woocommerce_customer_id
ERP_SI_UPDATE_STOCK=1
ERP_SHIPPING_ITEM_CODE=SHIPPING
ERP_SALES_TAX_ACCOUNT=Output VAT - TECH
